<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"

        android:layout_gravity="center"
        android:layout_marginTop="87dp"

        // 이 부분이 오류죠
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true" /-->

    <Button
        android:text="이 시스템에서 계정 전체 삭제"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/_Button_ClearAllData"

        android:layout_gravity="center"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />

    <Button
        android:text="회원가입"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/_Button_Register"

        android:layout_gravity="center"

        android:layout_above="@+id/_Button_ClearAllData"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="서버 IP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/_TextView_ServerIP"
            android:layout_row="0"
            android:layout_column="0"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="172.20.10.3"
            android:ems="10"
            android:id="@+id/_EditText_ServerIP"
            android:layout_row="0"
            android:layout_column="2"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:rowCount="3"
        android:columnCount="2"
        android:id="@+id/_GridLayout_Input"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="사용자 ID"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/_TextView_UserID">
        </TextView>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/_EditText_UserID"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:text="비밀번호"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/_TextView_Password"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/_EditText_Password"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="0" />

        <TextView
            android:text="확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/_TextView_PasswordConfirm"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/_EditText_PassConfirm"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="0" />


    </GridLayout>

</RelativeLayout>
